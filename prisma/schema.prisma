generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider = "zod-prisma-types"
  output   = "../src/db/schema"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Invention {
  id           Int      @id @default(autoincrement())
  name         String?
  name_updated Boolean  @default(false)
  start_year   Int
  end_year     Int?
  description  String
  image_url    String?
  created_at   DateTime @default(now())
  wiki_summary String?
  wiki_link    String?

  @@map("inventions")
}

model Score {
  id           Int      @id @default(autoincrement())
  invention_id Int?
  created_at   DateTime @default(now())

  @@map("scores")
}

model UsedInvention {
  id           Int      @id @default(autoincrement())
  invention_id Int
  is_current   Int      @default(1)
  used_at      DateTime @default(now())

  @@map("used_inventions")
}

model User {
  id         Int      @id @default(autoincrement())
  name       String?
  created_at DateTime @default(now())

  @@map("users")
}
