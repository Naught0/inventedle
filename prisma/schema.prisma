generator client {
  provider = "prisma-client"
  output   = "../src/db/prisma/generated"
}

datasource db {
  provider = "sqlite"
}

model Invention {
  id             Int      @id @default(autoincrement())
  name           String?
  year           Int
  description    String
  image_url      String?
  created_at     DateTime @default(now())
  inventor       String?
  inventor_link  String?
  invention_link String?

  @@map("inventions")
}

model Score {
  id           Int      @id @default(autoincrement())
  invention_id Int?
  created_at   DateTime @default(now())

  @@map("scores")
}

model UsedInvention {
  id           Int      @id @default(autoincrement())
  invention_id Int
  is_current   Int      @default(1)
  used_at      DateTime @default(now())

  @@map("used_inventions")
}

model User {
  id         Int      @id @default(autoincrement())
  name       String?
  created_at DateTime @default(now())

  @@map("users")
}
